@using SibSalamat.Controllers
@model SibSalamat.Views.Account.UserPanelViewModel

@{
    ViewData["Title"] = "حساب کاربری";
}

<div class="centered-container">
    <div class="content">
        <h2 style="color: #1a1e21">حساب کاربری شما</h2>

        <div class="btn-container">
            <a href="@Url.Action("DisplayAllPills", "Account")" class="btn btn-pink blurred-btn">خرید دارو</a>
        </div>
        <div class="btn-container">
            <a href="@Url.Action("Payment", "Account")" class="btn btn-blue blurred-btn">صورت حساب</a>
        </div>
        <div class="btn-container">
            <a href="@Url.Action("UserLogOut", "Account")" class="btn btn-outline-danger blurred-btn">خروج</a>
        </div>
        <div class="credit-text">Credit: @Model.Credit</div>
    </div>
</div>
