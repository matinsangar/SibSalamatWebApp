@model SibSalamat.Models.User
@{
    ViewData["Title"] = "ورود کاربر";
}
<div class="centered-container">
    <div class="form-container">
        <h2>ورود</h2>
        <form method="post">
            <div class="form-group">
                <label asp-for="Name">نام کاربری</label>
                <input type="text" asp-for="Name" class="form-control" id="inputUsername" placeholder="نام کاربری"/>
            </div>
            <div class="form-group">
                <label asp-for="Password">رمز عبور</label>
                <input type="password" asp-for="Password" class="form-control" id="inputPassword" placeholder="رمز عبور"/>
            </div>
            <div class="form-group">
                <label asp-for="NationalCode">کدملی</label>
                <input asp-for="NationalCode" class="form-control" id="NationalCode" placeholder="کدملی"/>
            </div>
            <button type="submit" class="btn btn-primary " style="padding-top: 15px; margin-top: 20px">ورود</button>
        </form>
    </div>
</div>