@model SibSalamat.Models.Admin
@{
    ViewData["Title"] = "user Login";
}
<h2>ورود</h2>
<form method="post">
    <div class="form-group">
        <label for="inputUsername">نام کاربری</label>
        <input type="text" name="Name" class="form-control" id="inputUsername" placeholder="نام کاربری"/>
    </div>
    <div class="form-group">
        <label for="inputPassword">رمز عبور</label>
        <input type="password" name="Password" class="form-control" id="inputPassword" placeholder="رمز عبور"/>
    </div>
    <div class="form-group">
        <label for="NationalCode">کدملی</label>
        <input name="NationalCode" class="form-control" id="NationalCode" placeholder="کدملی"/>
    </div>
    <button type="submit" class="btn btn-primary " style="padding-top: 15px; margin-top: 20px">ورود</button>
</form>